pipeline {
    agent any

    parameters {
         string(name: 'tomcat_staging', defaultValue: '34.241.46.91', description: 'Staging Server')
         string(name: 'tomcat_prod', defaultValue: '34.241.46.91', description: 'Production Server')
    }

    triggers {
         pollSCM('* * * * *')
     }


stages{
        stage('Build'){
            steps {
                sh 'mvn clean package'
            }
            post {
                success {
                    echo 'Now Archiving...'
                    archiveArtifacts artifacts: '**/target/*.war'
                }
            }
        }

        stage ('Deployments'){
            parallel{
                stage ('Deploy to Staging'){
                    steps {
                        sh "cp **/target/*.war /var/lib/tomcat/webapps"
                    }
                }

                stage ("Deploy to Production"){
                    steps {
                        sh "cp **/target/*.war /opt/tomcat-production/webapps"
                    }
                }
            }
        }
    }
}
